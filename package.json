{
  "name": "uf-research-metrics-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Internal web platform for university Office of Research to track grant activity, faculty productivity, and research metrics",
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' --filter './packages/*' dev",
    "build": "pnpm --recursive --filter './apps/*' build",
    "test": "pnpm --recursive test",
    "lint": "pnpm --recursive lint",
    "typecheck": "pnpm --recursive typecheck",
    "clean": "pnpm --recursive clean",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:seed": "pnpm --filter api db:seed",
    "db:studio": "pnpm --filter api db:studio"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

